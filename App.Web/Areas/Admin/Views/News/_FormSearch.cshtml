@{
	var classShowCollapse = "show";
	if (String.IsNullOrEmpty(ViewBag.TitleNews) && ViewBag.CateId == 0)
	{
		classShowCollapse = "";
	}
}

<div class="collapse @classShowCollapse" id="collapseExample">
	<div class="card">
		<section class="content">
			<div class="card-body">
				<form class="form-horizontal">
					<div class="row">
						<div class="form-group col-md-6">
							<label for="title" class="control-label">Tiêu đề</label>
							<input id="title" name="title" type="text" class="form-control" value="@ViewBag.TitleNews" />
						</div>
						<div class="form-group col-md-6">
							<label for="cateId" class="control-label">Thể loại</label>
							<select asp-items="(SelectList)ViewBag.CategoryNews" name="cateId"
									class="select-status form-control bs-autocomplete" title="Category">
							</select>
						</div>
						<div class="col-12">
							<div class="form-group">
								<button type="submit" class="btn btn-success"><i class="fa fa-save mr-1"></i>Tìm kiếm</button>
								<button type="reset" class="btn btn-default"><i class="fa fa-undo"></i> Nhập lại</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</section>
	</div>
</div>