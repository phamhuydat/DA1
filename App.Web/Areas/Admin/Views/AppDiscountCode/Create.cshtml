@model App.Web.Areas.Admin.ViewModels.AppDiscountCode.AddOrUpdateDiscountCodeVM

@{
	ViewData["Title"] = "Thêm mới mã khuyến mãi";
}

<div class="col-md-12">
	<form asp-action="Create" method="post" asp-controller="AppDiscountCode" autocomplete="off">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<partial name="_AddOrUpdateCode" model="Model" />
		<div class="form-group">
			<button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Lưu</button>
			<button type="reset" class="btn btn-default"><i class="fa fa-undo"></i> Nhập lại</button>
		</div>
	</form>
</div>
<partial name="_BackToList" />