@model App.Web.Areas.Admin.ViewModels.AppDiscountCode.AddOrUpdateDiscountCodeVM

<div class="row">
	<div class="col-md-4">
		<div class="form-group">
			<label asp-for="Code" class="control-label required">Mã khuyến mãi</label>
			<input asp-for="Code" class="form-control" />
			<span asp-validation-for="Code" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="DiscountPrice" class="control-label required">Giá giảm</label>
			<input asp-for="DiscountPrice" class="form-control" />
			<span asp-validation-for="DiscountPrice" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="MinDiscountPrice" class="control-label required">Giá đơn hàng tối thiểu</label>
			<input asp-for="MinDiscountPrice" class="form-control" />
			<span asp-validation-for="MinDiscountPrice" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label class="control-label">Không áp dụng cho danh mục</label>
			<vc:select-list-category-d-code discount-code="Model" />
			<span asp-validation-for="UnApplyCategoryId" class="text-danger"></span>
		</div>
	</div>
</div>