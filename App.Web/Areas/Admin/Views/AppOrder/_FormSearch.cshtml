@{
	var classShowCollapse = "show";
	if (String.IsNullOrEmpty(ViewBag.Name) && String.IsNullOrEmpty(ViewBag.Phone) && ViewBag.OrderStatusId == null)
	{
		classShowCollapse = "";
	}
}

<div class="collapse @classShowCollapse" id="collapseExample">
	<div class="card">
		<section class="content">
			<div class="card-body">
				<form class="form-horizontal">
					<div class="row">
						<div class="form-group col-md-4">
							<label for="name" class="control-label">Tên khách hàng</label>
							<input id="name" name="Name" type="text" class="form-control" value="@ViewBag.Name" />
						</div>
						<div class="form-group col-md-4">
							<label for="phone" class="control-label">Số điện thoại</label>
							<input id="phone" name="Phone" type="text" class="form-control" value="@ViewBag.Phone" />
						</div>
						<div class="form-group col-md-4">
							<label for="cateId" class="control-label">Trạng thái đơn hàng</label>
							<select asp-items="(SelectList)ViewBag.OrdersStatus" name="OrderStatusId"
									class="select-status form-control bs-autocomplete" title="Category">
							</select>
						</div>
						<div class="col-12">
							<div class="form-group">
								<button type="submit" class="btn btn-success"><i class="fa fa-save mr-1"></i>Tìm kiếm</button>
								<button type="reset" class="btn btn-default"><i class="fa fa-undo"></i> Nhập lại</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</section>
	</div>
</div>
