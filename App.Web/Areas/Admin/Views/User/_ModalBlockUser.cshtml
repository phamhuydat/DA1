<div class="modal fade" id="ModalBlock" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title js-name"></h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body" id="modal-block">
				<div>
					<form asp-action="BlockUser" asp-controller="User" asp-area="Admin">
						<input type="hidden" id="Id" name="Id" />
						<div class="form-group">
							<label class="control-label">Khóa đến ngày</label>
							<input name="BlockedTo" type="date" class="form-control js-date" />
							<span class="text-danger js-message"></span>
						</div>
						<div class="form-check">
							<label class="form-check-label">
								<input class="form-check-input js-check" value="true" name="Permanentblock" type="checkbox">
								Khóa vĩnh viễn
							</label>
							<span class="text-danger js-message"></span>
						</div>
						<div class="form-group mt-2">
							<button type="submit" class="btn btn-primary js-succes-block">Khóa tài khoản</button>
							<button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>