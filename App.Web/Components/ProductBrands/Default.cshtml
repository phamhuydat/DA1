@model IEnumerable<App.Web.ViewModels.ProductBrands.ListProductBrandVM>

<div class="brand-area ">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="section-title text-center mb-20" title="Thương hiệu">
					<h2>Thương hiệu</h2>
				</div>
			</div>
			<div class="col-12">
				<div class="brand-active owl-carousel owl-theme owlDesign">
					@if (Model.Count() > 0)
					{
						foreach (var item in Model)
						{
							if (!item.ImagePath.IsNullOrEmpty())
							{
								<div class="single-brand img-full">
									<img src="@item.ImagePath"
										 alt="ORIGINAL LOGO" title="ORIGINAL LOGO ">
								</div>
							}
						}
					}
				</div>
			</div>
		</div>
	</div>
</div>