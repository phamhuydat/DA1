@model App.Web.ViewModels.Cart.OrderDataVM

<form asp-action="Order" method="post">

    <div class="all_checkout-billing">
        <div id="checkout-billing-load">
            <div class="checkout-data">
                <div class="section new-billing-address"
                     id=billing-new-address-form>
                    <div class="enter-address bg-white">
                        <div class=edit-address>
                            <div class=inputs>
                                <input placeholder=Tên type="text" />
                                <span></span>
                            </div>
                            <div class="inputs two_col left">
                                <input placeholder="Số điện thoại" type="tel" />
                                <span></span>
                            </div>
                            <div class="inputs two_col right">
                                <input placeholder="Email" type="email" />
                                <span></span>
                            </div>

                            <div class="inputs two_col left">
                                <label for="BillingNewAddress_StateProvinceId">Chọn tỉnh, thành phố:</label>
                                <input type="text" placeholder="Tỉnh, thành phố">

                            </div>

                            <div class="inputs two_col right">
                                <label for=BillingNewAddress_CountyId>Quận, Huyện:</label>
                                <input type="text" placeholder="quận, huyện" name="" id="">
                            </div>

                            <div class="all_receive_home">
                                <div class="inputs one-col">
                                    <label>Địa chỉ cụ thể</label>
                                    <input type=text
                                           id=BillingNewAddress_Address1
                                           name=BillingNewAddress.Address1>
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id=checkout-payment-load>
            <div class=checkout-data>
                <div class="section payment-method">
                    <div class=tt-address-select>Thông tin thanh toán</div>
                    <div class=notice-payment style="text-align:left">
                        Quý khách
                        vui lòng lựa chọn các hình thức thanh toán dưới đây:
                    </div>
                    <ul class="method-list" id="payment-method-block">
                        <li style=display:block>
                            <div class=method-name>
                                <div class="payment-details d-flex">
                                    <div class="d-flex align-items-center">
                                        <input onclick="selectPaymentMethod(&#34;PaymentKredivo&#34;)"
                                               id=paymentmethod_0 type=radio
                                               name=paymentmethod
                                               value=Payments.Kredivo> <input id=flash-sale value=false hidden>
                                    </div>
                                    <div class=payment-logo>
                                        <label for=paymentmethod_0>
                                            <img src=https://shopdunk.com/Plugins/Payments.Kredivo/logo.jpg
                                                 alt="Thanh toán Kredivo"
                                                 width=36 height=36>
                                        </label>
                                    </div>
                                    <div class="d-flex align-items-center item_paymentmethod"
                                         style=width:100%>
                                        <label for=paymentmethod_0>
                                            Thanh to&#xE1;n
                                            Kredivo
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <li style=display:block>
                            <div class=method-name>
                                <div class="payment-details d-flex">
                                    <div class="d-flex align-items-center">
                                        <input onclick="selectPaymentMethod(&#34;PaymentOnepay&#34;)"
                                               id=paymentmethod_1 type=radio
                                               name=paymentmethod
                                               value=Payments.Onepay> <input id=flash-sale value=false hidden>
                                    </div>
                                    <div class=payment-logo>
                                        <label for=paymentmethod_1>
                                            <img src=https://shopdunk.com/Plugins/Payments.Onepay/logo.jpg
                                                 alt="Thanh toán OnePay" width=36
                                                 height=36>
                                        </label>
                                    </div>
                                    <div class="d-flex align-items-center item_paymentmethod"
                                         style=width:100%>
                                        <label for=paymentmethod_1>
                                            Thanh to&#xE1;n
                                            OnePay
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <li style=display:block>
                            <div class=method-name>
                                <div class="payment-details d-flex">
                                    <div class="d-flex align-items-center">
                                        <input onclick="selectPaymentMethod(&#34;PaymentPayoo&#34;)"
                                               id=paymentmethod_2 type=radio
                                               name=paymentmethod
                                               value=Payments.Payoo> <input id=flash-sale value=false hidden>
                                    </div>
                                    <div class=payment-logo>
                                        <label for=paymentmethod_2>
                                            <img src=https://shopdunk.com/Plugins/Payments.Payoo/logo.jpg
                                                 alt="Thanh toán Payoo" width=36
                                                 height=36>
                                        </label>
                                    </div>
                                    <div class="d-flex align-items-center item_paymentmethod"
                                         style=width:100%>
                                        <label for=paymentmethod_2>
                                            Thanh to&#xE1;n
                                            Payoo
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <li style=display:block>
                            <div class=method-name>
                                <div class="payment-details d-flex">
                                    <div class="d-flex align-items-center">
                                        <input onclick="selectPaymentMethod(&#34;PaymentVietQr&#34;)"
                                               id=paymentmethod_3 type=radio
                                               name=paymentmethod
                                               value=Payments.VietQr checked>
                                        <input id=flash-sale value=false hidden>
                                    </div>
                                    <div class=payment-logo>
                                        <label for=paymentmethod_3>
                                            <img src=https://shopdunk.com/Plugins/Payments.VietQr/logo.jpg
                                                 alt="Chuyển khoản ngân hàng"
                                                 width=36 height=36>
                                        </label>
                                    </div>
                                    <div class="d-flex align-items-center item_paymentmethod"
                                         style=width:100%>
                                        <label for=paymentmethod_3>
                                            Chuy&#x1EC3;n
                                            kho&#x1EA3;n ng&#xE2;n
                                            h&#xE0;ng
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <li style=display:block>
                            <div class=method-name>
                                <div class="payment-details d-flex">
                                    <div class="d-flex align-items-center">
                                        <input onclick="selectPaymentMethod(&#34;PaymentVNPay&#34;)"
                                               id=paymentmethod_4 type=radio
                                               name=paymentmethod
                                               value=Payments.VNPay> <input id=flash-sale value=false hidden>
                                    </div>
                                    <div class=payment-logo>
                                        <label for=paymentmethod_4>
                                            <img src=https://shopdunk.com/Plugins/Payments.VNPay/logo.jpg
                                                 alt="Thanh toán VNPay" width=36
                                                 height=36>
                                        </label>
                                    </div>
                                    <div class="d-flex align-items-center item_paymentmethod"
                                         style=width:100%>
                                        <label for=paymentmethod_4>
                                            Thanh to&#xE1;n
                                            VNPay
                                        </label>
                                    </div>
                                </div>
                            </div>
                        <li style=display:block>
                            <div class=method-name>
                                <div class="payment-details d-flex">
                                    <div class="d-flex align-items-center">
                                        <input onclick="selectPaymentMethod(&#34;PaymentZaloPay&#34;)"
                                               id=paymentmethod_5 type=radio
                                               name=paymentmethod
                                               value=Payments.ZaloPay> <input id=flash-sale value=false hidden>
                                    </div>
                                    <div class=payment-logo>
                                        <label for=paymentmethod_5>
                                            <img src=https://shopdunk.com/Plugins/Payments.ZaloPay/logo.jpg
                                                 alt="Thanh toán ZaloPay"
                                                 width=36 height=36>
                                        </label>
                                    </div>
                                    <div class="d-flex align-items-center item_paymentmethod"
                                         style=width:100%>
                                        <label for=paymentmethod_5>
                                            Thanh to&#xE1;n
                                            ZaloPay
                                        </label>
                                    </div>
                                </div>
                            </div>
                    </ul>
                </div>
            </div>
            <div>
                <div class=payment-info-busy></div>
                <div id=checkout-payment-info></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="cart-footer col-sm-12 col-lg-6">
            <div class=sidebar-cart>
                <div class=cart-collaterals>
                    <div class=deals>
                        <div class=coupon-box>
                            <div class="title"><strong>Mã giảm giá</strong></div>
                        </div>
                        <div class="coupon-code">
                            <input placeholder="Mã giảm giá"
                                   type=text class="discount-coupon-code">
                            <button type=submit class="button-2 apply-discount-coupon-code-button">
                                Áp dụng
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="totals">
                <div class="total-info">
                    <table class="cart-total">
                        <tbody>
                            <tr class=order-subtotal>
                                <td class=cart-total-left>
                                    <label>
                                        Tổng
                                        phụ:
                                    </label>
                                </td>
                                <td class=cart-total-right>
                                    <span class=value-summary>148.950.000&#x20AB;</span>
                                </td>
                            </tr>
                            <tr class=order-total>
                                <td class=cart-total-left>
                                    <label>
                                        Tổng
                                        cộng:
                                    </label>
                                </td>
                                <td class=cart-total-right>
                                    <span class=value-summary>148.950.000&#x20AB;</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div id=terms-of-service-warning-box title="Điều khoản dịch vụ"
                     style=display:none>
                    <p>
                        Vui lòng chấp nhận các điều khoản dịch vụ trước bước tiếp
                        theo.
                </div>
                <div class=terms-of-service>
                    <div class=d-flex>
                        <div>
                            <input id=termsofservice type=checkbox
                                   name=termsofservice>
                        </div>
                        <label>
                            <span class="rule-web">Tôi đã đọc và đồng ý với điều khoản và điều kiện</span>
                            <span class="rule-web">của website</span>
                        </label>
                    </div>
                </div>
                <div class="checkout-buttons">
                    <button type="submit" id="checkout"
                            class="button-1 checkout-button">
                        Tiến hành đặt hàng
                    </button>
                </div>
                <div class="note-ck">
                    (*) Phí phụ thu sẽ được tính khi bạn tiến
                    hành thanh toán.
                </div>
            </div>
        </div>
    </div>
</form>