@model App.Web.ViewModels.Account.ChangePwdVM
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-sg"></div>
<div class="master-wrapper-content">
    <div class="master-column-wrapper">
        <partial name="_side-2.cshtml" />
        <div class="center-2">
            <div class="page account-page change-password-page">
                <div class="page-title">
                    <h1>Đổi mật khẩu</h1>
                </div>
                <div class=page-body>
                    <form method=post autocomplete="off" asp-action="ChangePassword" asp-controller="Account">
                        <div class="fieldset>"
                            <label class="luu_y"> Lưu ý: Mật khẩu phải có tối thiểu 8 ký tự
                                bao gồm chữ, số và các ký tự đặc biệt </label>
                            <div class="form-fields">
                                <div class="inputs">
                                    <label >Mật khẩu cũ:</label>
                                    <input type="password" asp-for="Pwd"/> 
                                    <span class="field-validation-valid" asp-validation-for="Pwd"></span>
                                </div>
                                <div class="inputs">
                                    <label >Mật khẩu mới:</label>
                                    <input type="password"  asp-for="NewPwd"/>
                                    <span class="field-validation-valid" asp-validation-for="NewPwd"></span>
                                </div>
                                <div class="inputs">
                                    <label >Xác nhận mật khẩu:</label>
                                    <input type="password" asp-for="ConfirmPassword">
                                    <span class="field-validation-valid" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>
                        </div>
                        <div class="buttons">
                            <button type="submit" class="button-1 change-password-button">
                                Đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

