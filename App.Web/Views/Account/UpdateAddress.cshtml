@model App.Web.ViewModels.Account.UpdateProfileVM
@{
    ViewData["Title"] = "UpdateAddress";
    Layout = "~/Views/Shared/_LayoutInfo.cshtml";
}

<div class="bg-sg"></div>
<div class="master-wrapper-content">
    <div class="master-column-wrapper">
        <div class="side-2">
            <div class="block block-account-navigation ">
                <div class="title"><strong>Tài khoản của tôi</strong></div>
                <div class="listbox">
                    <ul class="list">
                        <li class="customer-info inactive">
                            <a asp-action="UpdateProfile" asp-controller="Account">Thông tin tài khoản</a>
                        </li>
                        <li class="customer-addresses active">
                            <a asp-action="UpdateAddress" asp-controller="Account">Địa chỉ nhận hàng</a>
                        </li>
                        <li class="customer-orders inactive">
                            <a asp-action="History" asp-controller="Account">Đơn đặt hàng</a>
                        </li>
                        <li class="change-password inactive">
                            <a asp-action="ChangePassword" asp-controller="Account">Đổi mật khẩu</a>
                        </li>

                        <li class="customer-avatar inactive">
                            <a asp-action="UpdateImg">
                                Ảnh đại diện
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class=center-2>            
            <form method="post" asp-action="UpdateAddress" asp-controller="Account" style="margin-top: -15px">
                <div class="page account-page address-edit-page">
                    <div class="page-title">
                        <h1>Sửa địa chỉ</h1>
                    </div>
                    <div class="page-body">
                        <div class="edit-address">
                            <div class="inputs">
                                <label for=Address_FirstName>Tên, Họ:</label> 
                                <input type=text value="@Model.fullname"> 
                                 <span class="field-validation-valid" asp-validation-for="@Model.fullname"></span>
                            </div>
                            <div class="inputs two_col left">
                                <label>Số điện thoại:</label> 
                                <input type=tel value="@Model.phone"> 
                                <span class=field-validation-valid asp-validation-for="@Model.phone"></span>
                            </div>
                            <div class="inputs two_col right">
                                <label >Email:</label>
                                <input type="email" value="@Model.email">
                                <span class=field-validation-valid asp-validation-for="@Model.email"></span>
                            </div>

                            <div class="inputs one-col">
                                <label >Địa chỉ nhận hàng:</label> 
                                <input type="text" value="@Model.address">
                                <span class="field-validation-valid" asp-validation-for="@Model.address"></span>
                            </div>
                        </div>
                        <div class="buttons mt-4">
                            <button type="submit" class="button-1 save-address-button">
                                Lưu lại
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


