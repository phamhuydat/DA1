            <ul class="top-menu notmobile">
                <li class="category-menu-items"><a asp-controller="Home" asp-action="" asp-route-id="1"> iPhone </a>
                <li class="category-menu-items"><a asp-controller="Home" asp-route-id="2"> iPad </a>
