                    @if (Context.User.Identity.IsAuthenticated)
                    {
                        <ul class="popup-header-links">
                            <li class=li_ico-register>
                                <a asp-action="Register" asp-controller="Account"
                                   class="ico-register">
                                    Tạo tài khoản ngay
                                </a>
                            </li>
                            <li class="li_ico-login">
                                <a asp-action="Login" asp-controller="Account"
